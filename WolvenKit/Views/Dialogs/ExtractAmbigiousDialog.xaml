<catel:UserControl x:Class="WolvenKit.Views.Dialogs.ExtractAmbigiousDialog"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:catel="http://schemas.catelproject.com" xmlns:hc="https://handyorg.github.io/handycontrol">
    <catel:UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <hc:ThemeResources/>
                <hc:Theme/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </catel:UserControl.Resources>
    <Grid Width="600">
        <StackPanel>
            <TextBlock Text="The file you are trying to extract exists in one or more archives, Please select the item of your preference."></TextBlock>
            <Grid>
                <ListBox Height="300">
                    
                </ListBox>
                
            </Grid>
            <Grid  Margin="0,50,0,0" >
                <Button HorizontalAlignment="Left" Width="150" Content="Cancel"/>

                <Button HorizontalAlignment="Right" Width="150" Content="Confirm"/>
                <CheckBox HorizontalAlignment="Right" Margin="0,0,155,0" BorderBrush="Transparent" Background="{DynamicResource accent3}" Content="Do not ask me again" ></CheckBox>


            </Grid>
        </StackPanel>
    
    </Grid>
    
</catel:UserControl>
