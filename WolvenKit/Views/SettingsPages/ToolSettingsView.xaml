                </hc:SideMenuItem.Header>
            </hc:SideMenuItem>
            <hc:SideMenuItem  >
                <hc:SideMenuItem.Header>
                    <TextBlock Text="Plugin Manager" FontSize="10.5"/>
                </hc:SideMenuItem.Header>
            </hc:SideMenuItem>
            <hc:SideMenuItem  >
                <hc:SideMenuItem.Header>
                    <TextBlock Text="Code Editor" FontSize="10.5"/>
                </hc:SideMenuItem.Header>
            </hc:SideMenuItem>
            <hc:SideMenuItem  >
                <hc:SideMenuItem.Header>
                    <TextBlock Text="Visual Editor" FontSize="10.5"/>
