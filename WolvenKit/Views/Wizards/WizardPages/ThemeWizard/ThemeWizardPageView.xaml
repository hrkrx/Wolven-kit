<catel:UserControl x:Class="WolvenKit.Views.Wizards.WizardPages.ThemeWizard.ThemeWizardPageView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:catel="http://schemas.catelproject.com" xmlns:hc="https://handyorg.github.io/handycontrol" xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" Initialized="UserControl_Initialized_1">


    <Grid Margin="0,65,0,0" x:Name="PageGrid" Grid.Row="1">



        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>


        <Grid Grid.Column="0">
            <Border CornerRadius="15" Margin="0,0,0,0"    BorderThickness="1,1,1,1">
                <Border CornerRadius="15" Margin="0,0,0,0" Grid.Column="1"  BorderBrush="{DynamicResource RegionBrush}" BorderThickness="1,15,1,15">

                    <Grid Margin="5" >
                        <hc:ColorPicker   BorderBrush="Transparent">

                        </hc:ColorPicker>
                    </Grid>
                </Border>
            </Border>

        </Grid>





    </Grid>

</catel:UserControl>
